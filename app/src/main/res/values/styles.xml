<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="Widget.Qii" parent="@android:style/Widget"/>

  <style name="Widget.Qii.Tag">
    <item name="android:gravity">center_vertical</item>
    <item name="android:lines">1</item>
  </style>

  <style name="Widget.Qii.Tag.Inline">
    <item name="android:drawablePadding">@dimen/spacing_narrow</item>
    <item name="android:drawableStart">@drawable/tag_dot</item>
  </style>

</resources>
