<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="bottomSheetDialogTheme">@style/SearchBottomSheetTheme</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Widget.Qii" parent="@android:style/Widget" />

    <style name="Widget.Qii.Tag">
        <item name="android:gravity">center_vertical</item>
        <item name="android:lines">1</item>
    </style>

    <style name="Widget.Qii.Tag.Inline">
        <item name="android:drawablePadding">@dimen/spacing_narrow</item>
        <item name="android:drawableStart">@drawable/tag_dot</item>
    </style>

    <style name="SearchBottomSheetTheme" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/SearchBottomSheetModal</item>
    </style>

    <style name="SearchBottomSheetModal" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/search_bottom_sheet_background</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>
</resources>
